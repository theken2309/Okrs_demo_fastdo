@page "/register"
<section class="section " style="width:100%">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-half">
                <h2 class="title is-2 has-text-centered">Form Đăng Ký</h2>

                <form  >
                    <div class="field">
                        <label class="label" for="fullName">Họ và Tên:</label>
                        <div class="control">
                            <input class="input" type="text" required  @bind="use.nameUse" >
                        </div>
                    </div>

                    <div class="field">
                        <label class="label" for="email">Quyền</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select  @bind="use.permisson"  >
                                    <option value="1"> Nhân Viên</option>
                                    <option value="2">Quản Lý</option>
                                    <option value="3">Admin</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="field">
                        <label class="label" for="password">Mật khẩu:</label>
                        <div class="control">
                            <input class="input" type="password"   @bind ="use.password" >
                        </div>
                    </div>

                  

                    <div class="field">
                        <div class="control">
                            <button class="button is-primary"@onclick="@(e=>dangKy(use))" >Đăng Ký</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@code {
    UseModel use = new();
    public async void dangKy(UseModel use)
    {
        DbUse.Create(use);
    }

}
